<h2>
  Edit Employee's profile
</h2>

<div class="edit-employee">
  <form action="/employee/{{oneEdit._id}}/process-edit-employee" method="POST">
    <input type="text" name="firstName" value={{oneEdit.firstName}} placeholder="Name">
    <select name="status" value={{oneEdit.status}}>
      <option value="{{oneEdit.status}}">--{{oneEdit.status}}--</option>
      <option value="Medic">Medic</option>
      <option value="Interne">Interne</option>
      <option value="Interim">Interim</option>
    </select>
    <button>Edit this employee </button>
  </form>
</div>
